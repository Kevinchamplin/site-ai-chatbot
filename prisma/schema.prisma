// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/prisma-client"
}

datasource db {
  provider = "sqlite"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  bots        Bot[]
}

model Bot {
  id          String      @id @default(cuid())
  userId      String
  name        String
  slug        String
  description String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokens      BotToken[]
  documents   Document[]

  @@unique([userId, slug])
}

model BotToken {
  id        String   @id @default(cuid())
  botId     String
  token     String   @unique
  createdAt DateTime @default(now())

  bot       Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
}

model Document {
  id          String   @id @default(cuid())
  botId       String
  title       String
  sourceType  String   // e.g. "upload", "url", "crawl"
  sourceRef   String   // file name or URL
  createdAt   DateTime @default(now())

  bot         Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
}
